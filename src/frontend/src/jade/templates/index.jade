include ../mixins
doctype html

html(lang="en")
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width', initial-scale='1.0')


        //auto-reload for jade
        +script("http://localhost:" + buildCfg.liveReloadPort + "/livereload.js?snipver=1")


        +script-cdn("jquery/2.1.4/jquery.js")

        +style-cdn("twitter-bootstrap/3.3.4/css/bootstrap.css")
        +script-cdn("twitter-bootstrap/3.3.4/js/bootstrap.min.js")

        +style-cdn("font-awesome/4.3.0/css/font-awesome.css")
        +script-cdn("angular.js/1.3.15/angular.js")
        +script-cdn("angular.js/1.3.15/angular-resource.js")
        +script-cdn("angular.js/1.3.15/angular-route.js")
        +script-cdn("angular.js/1.3.15/angular-animate.js")
        +script-cdn("angular.js/1.3.15/angular-sanitize.js")

        +script-cdn("angular-ui-router/0.2.14/angular-ui-router.js")

        +script-cdn("angular-ui-bootstrap/0.13.0/ui-bootstrap-tpls.min.js")

        +script-cdn("angular-ui-utils/0.1.1/angular-ui-utils.min.js")

        +style-cdn("angular-ui-select/0.11.2/dist/select.css")
        +script-cdn("angular-ui-select/0.11.2/dist/select.js")

        +style("/media/build/app.css")
        +script("/media/build/app.js")


        title Torrent Searcher2!

    body
        div(align='center')
            h1 Torrent-Searcher
            strong
            button(class='btn', data-action='go').
                Grab stuff
        div(align='center', ng-app="torrentSearcher")
            table.table.my-awesome-table
                thead
                    tr
                        th Name
                        th link
                        th Seeders
                        th Leechers
                 tbody(ng-controller="torrentTable")
                    tr(ng-repeat="result in results")
                        td {{result.leechers}}
                        td {{result.link}}
                        td {{result.seeders}}
                        td {{result.leechers}}
